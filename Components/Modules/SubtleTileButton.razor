<a href="/" class="p-4 rounded-lg text-left border-slate-300 border-2 border-dashed bg-slate-50 hover:bg-slate-100 text-slate-400 hover:text-black transition-all ease-in-out duration-75">
    <p class="mb-2 font-bold">
        @(TitlePrefix) @(Title)
    </p>
    <p class="text-sm">
        @(Body)
    </p>
</a>

@code {
    [Parameter]
    public string TitlePrefix { get; set; } = string.Empty;
    
    [Parameter]
    public string Title { get; set; } = string.Empty;
    
    [Parameter]
    public string Body { get; set; } = string.Empty;
    
    [Parameter]
    public string Url { get; set; } = "/";
}