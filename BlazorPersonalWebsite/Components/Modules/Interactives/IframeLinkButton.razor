@using BlazorPersonalWebsite.Components.Modules.Decorations

<a href="@(Href)" class="mr-2 mb-9 px-2.5 py-0.5 rounded-full bg-slate-200 flex items-center gap-0.75 shadow
                         pointer-events-auto ring-blue-500 transition-all duration-75 ease-in-out hover:z-10
                         hover:scale-105 hover:shadow-md hover:ring-2">
    <p class="text-xs font-semibold text-slate-500">
        @(Text)
    </p>
    <OpenInNewLabelIcon ShowIcon="@(ShowOpenInNewIcon)" />
</a>

@code {
    [Parameter] public string Href { get; set; } = "/";
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public bool ShowOpenInNewIcon { get; set; } = false;
}