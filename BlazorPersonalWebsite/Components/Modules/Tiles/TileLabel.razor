@using BlazorPersonalWebsite.Components.Modules.Decorations

<div class="mt-0.5 last:-mr-2 px-2.5 py-0.5 rounded-full bg-@(Color)-200 flex items-center gap-0.75">
    <p class="text-xs font-semibold text-@(Color)-500">
        @(Content)
    </p>
    <OpenInNewLabelIcon ShowIcon="@(ShowOpenInNewIcon)" />
</div>

@code {
    [Parameter] public string Color { get; set; } = "slate";
    [Parameter] public string Content { get; set; } = string.Empty;
    [Parameter] public bool ShowOpenInNewIcon { get; set; } = false;
}