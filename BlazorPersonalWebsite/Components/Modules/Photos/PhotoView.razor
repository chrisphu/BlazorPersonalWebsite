<div class="@(PhotoViewDisplay ? "" : "hidden") fixed top-0 right-0 left-0 bottom-0 bg-transparent flex items-center
            justify-center pointer-events-none select-none">
    <div class="aspect-square h-85/100 flex items-center justify-center">
        <div class="aspect-square max-w-[85vw] flex items-center justify-center">
            <img src="@(Src)" alt="" class="size-full max-w-[1440px] max-h-[1440px] object-contain
                                            outline-slate-100" />
        </div>
    </div>
</div>

@code {
    [Parameter] public bool PhotoViewDisplay { get; set; } = false;
    [Parameter] public string Src { get; set; } = "";
}